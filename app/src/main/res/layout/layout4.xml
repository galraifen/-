<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#3380b3">
    <AnalogClock
        android:id="@+id/simpleAnalogClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ClockName"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="90dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lay4Info"
        android:layout_marginTop="200dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/lay4_backround"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="120dp"/>
</FrameLayout>