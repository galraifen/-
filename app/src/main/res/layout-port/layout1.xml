<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="320dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/name_text"
            />

        <EditText
            android:id="@+id/edEnterName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/nameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="190dp">

        <CheckBox
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/op1" />

        <CheckBox
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/op2" />

        <CheckBox
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/op3" />

        <View
            android:id="@+id/vSeparateLine"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:background="@android:color/darker_gray" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop = "50dp"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/rbAlternative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alt1" />

            <RadioButton
                android:id="@+id/rbAlternative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alt2" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>